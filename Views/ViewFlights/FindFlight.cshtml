<div >
<h1>List Of Flight</h1>



<table class="table">
    <thead>
        <tr>
            <th>
            @Html.DisplayNameFor(modelitem => modelitem.getFlightDtos.FirstOrDefault().Airline)
            </th>
            <th>
            @Html.DisplayNameFor(modelitem => modelitem.getFlightDtos.FirstOrDefault().DepartureTime)
            </th>
            <th>
            @Html.DisplayNameFor(modelitem => modelitem.getFlightDtos.FirstOrDefault().DestinationFrom)
            </th>
            <th>
            @Html.DisplayNameFor(modelitem => modelitem.getFlightDtos.FirstOrDefault().DestinationTo)
            </th>
            <th>
            @Html.DisplayNameFor(modelitem => modelitem.getFlightDtos.FirstOrDefault().Price)
            </th>
        </tr>
    </thead>
</tbody>
    @foreach (var item in Model.getFlightDtos){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Airline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Select Flight", "BookingFlight", 
                new {departureDate = Model.findFlightDto.DepartureDate, amountPassenger = Model.findFlightDto.AmountPassenger, flightId = item.Id})
            </td>
            @* <td>
                <a asp-action="BookingFlight" asp-route-id="@item.Id">Select Flight</a> 
                <a asp-action="DetailFlights" asp-route-id="@item.Id">Details</a>
            </td> *@
        </tr>
    }
</table>
