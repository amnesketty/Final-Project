@model lounga.Dto.Web.WebDetailHotelDto
@{
    ViewData["Title"] = "DetailHotel";
}

<style>
.button {
  background-color: #E67E22;
  border: none;
  color: white;
  padding: 15px 32px;
  vertical-align: middle;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}

.ctnr {
  padding-top: 5px;
  padding-left: 15px;
  background-color: whitesmoke;
  box-shadow: 0 5px 5px rgba(0,0,0,.1);
}

.ctr {
  padding-top: 15px;
  padding-left: 15px;
  padding-bottom: 5px;
  background-color: #E67E22;
}

.container {
  display: grid;
  padding-left: 0px;
  grid-template-columns: auto 1fr;
  align-items: center;
}

.ctr0 {
  padding-right: 200px;
  padding-left: 200px;
  width: 1320px;
  padding-bottom: 5px;
}

</style>

<script>
    var airConditioner = model.getHotelDto!.FacilitiesHotel.airConditioner

    var gym = model.getHotelDto!.FacilitiesHotel.gym
    if gym === true {
        return <mat-icon style="color: green"></mat-icon>
    }
    else {
        return <mat-icon style="color: red"></mat-icon>
    }

</script>
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/LATEST-VERSION">
<body >
    <div class = "ctr0">
        <br>
        <div class = "ctr">
            <h1 style="color: white;">@Html.DisplayFor(model => model.getHotelDto!.Name)</h1>
        </div>
        
        <hr/>
        <marquee behavior="alternate" scrollamount="9">
            @foreach (var Photos in Model.getHotelDto!.Photos!)
                {
                    <img src = "@Html.DisplayFor(model => Photos.Image)" width="400" height="300">
                }
        </marquee>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.getHotelDto!.Rating)
            </dt>
            <dd class = "col-sm-10">
                <div class="container">
                <div style="color: black;">@Html.DisplayFor(model => model.getHotelDto!.Rating) &nbsp;
                </div>
                <i class="material-icons" style="color: orange;">star</i>
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.getHotelDto!.Address)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.getHotelDto!.Address)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.getHotelDto!.Phone)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.getHotelDto!.Phone)
            </dd>
        </dl>
        <hr />
        <h4>Facilities</h4>
            @if (Model.getHotelDto.FacilitiesHotel.Gym == true)
            {
                <mat-icon style= "color: red"><i class="material-icons" style="font-size: 45px">sports</i></mat-icon>
            }
            else if (Model.getHotelDto.FacilitiesHotel.Gym == false)
            {
                <mat-icon style= "color: green"><i class="material-icons" style="font-size: 45px">sports</i></mat-icon>
            }


        <hr />
        <h4>Room(s)</h4>
        @foreach (var Room in Model.getHotelDto!.Rooms!)
        {
        <div class="ctnr">
            <dl class = "row">
                <dt class = "col-sm-4" style="display:flex;align-items:center;">
                    @Html.DisplayFor(model => Room.Type)
                </dt>
                <dd class = "col-sm-5" style="display:flex;align-items:center; color: #E67E22">
                    Rp @Html.DisplayFor(model => Room.Price)
                </dd>
                <dd class = "col-sm-3" style="display:flex;align-items:center;">
                    @Html.ActionLink("Select Room", "BookingHotel", new {bookingDate = Model.bookingDate, name = Model.name,
                                totalRoom = Model.totalRoom, price = Room.Price, hotelId = Model.hotelId, roomId = Room.id}, new { @class = "button" })
                </dd>
            </dl>
        </div>
        <br>
        }
    </div>
</body>



