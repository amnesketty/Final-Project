@model lounga.Dto.Web.WebDetailHotelDto
@{
    ViewData["Title"] = "DetailHotel";
    var uniqueTipe = Model.getHotelDto.Rooms.Select(r => r.Type).Distinct().ToList();
}

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="~/css/DetailHotel.css" asp-append-version="true" />
<body >
    <div class = "ctr0">
        <br>
        <div class = "ctr">
            <h1 style="color: white;">@Html.DisplayFor(model => model.getHotelDto!.Name)</h1>
        </div>
        
        <hr/>
        <marquee behavior="alternate" scrollamount="9">
            @foreach (var Photos in Model.getHotelDto!.Photos!)
                {
                    <img src = "@Html.DisplayFor(model => Photos.Image)" width="400" height="300">
                }
        </marquee>
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.getHotelDto!.Rating)
            </dt>
            <dd class = "col-sm-10">
                <div class="container">
                <div style="color: black;">@Html.DisplayFor(model => model.getHotelDto!.Rating) &nbsp;
                </div>
                <i class="material-icons" style="color: orange;">star</i>
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.getHotelDto!.Address)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.getHotelDto!.Address)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.getHotelDto!.Phone)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.getHotelDto!.Phone)
            </dd>
        </dl>
        <hr />
        <h4>Facilities</h4>
            <div class="all">
                @if (Model.getHotelDto.FacilitiesHotel.AirConditioner == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">air</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.AirConditioner == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">air</i></mat-icon>
                }
                
                @if (Model.getHotelDto.FacilitiesHotel.Television == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">tv</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Television == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">tv</i></mat-icon>
                }

                @if (Model.getHotelDto.FacilitiesHotel.Wifi == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">wifi</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Wifi == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">wifi</i></mat-icon>
                }

                @if (Model.getHotelDto.FacilitiesHotel.Restaurant == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">restaurant</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Restaurant == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">restaurant</i></mat-icon>
                }

                @if (Model.getHotelDto.FacilitiesHotel.Spa == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">spa</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Spa == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">spa</i></mat-icon>
                }
                
                @if (Model.getHotelDto.FacilitiesHotel.Pool == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">pool</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Pool == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">pool</i></mat-icon>
                }

                @if (Model.getHotelDto.FacilitiesHotel.Playground == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">landscape</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Playground == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">landscape</i></mat-icon>
                }

                @if (Model.getHotelDto.FacilitiesHotel.Gym == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">sports</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Gym == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">sports</i></mat-icon>
                }

                @if (Model.getHotelDto.FacilitiesHotel.Parking == true)
                {
                    <mat-icon style= "color: #E67E22"><i class="material-icons" style="font-size: 45px">place</i></mat-icon>
                }
                else if (Model.getHotelDto.FacilitiesHotel.Parking == false)
                {
                    <mat-icon style= "color: lightgrey"><i class="material-icons" style="font-size: 45px">place</i></mat-icon>
                }
            </div>
        <hr />
        <h4>Room(s)</h4>
        @for (int i = 0; i < uniqueTipe.Count(); i++)
        {
            var Room = Model.getHotelDto!.Rooms!.FirstOrDefault(r => r.Type == uniqueTipe[i]);
            
            <div class="ctnr">
                <dl class = "row">
                    <dt class = "col-sm-4" style="display:flex;align-items:center;">
                        @Html.DisplayFor(model => Room.Type)
                    </dt>
                    <dd class = "col-sm-5" style="display:flex;align-items:center; color: #E67E22">
                        IDR @Html.DisplayFor(model => Room.Price)
                    </dd>
                    <dd class = "col-sm-3" style="display:flex;align-items:center;">
                        @Html.ActionLink("Select Room", "BookingHotel", new {bookingDate = Model.bookingDate, name = Model.name,
                                    totalRoom = Model.totalRoom, price = Room.Price, hotelId = Model.hotelId, roomId = Room.id, typeRoom = Room.Type}, new { @class = "button" })
                    </dd>
                </dl>
            </div>
            <br>
            
        }
        
    </div>
</body>



