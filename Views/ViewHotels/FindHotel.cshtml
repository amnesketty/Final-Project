@using lounga.Dto.Web
@model lounga.Dto.Web.WebFindHotelDto
@{
    ViewData["Title"] = "FindHotel";
    var findFlight = Model.findHotelDtos;
    var searchHotel = Model.searchHotelDto;
}

<h1>@ViewData["Title"]</h1>

<div>
    <table class = "table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Address)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.findHotelDtos){
                <tr>
                    @using (Html.BeginForm("DetailHotel", "ViewHotels", "webBookingHotelDto", FormMethod.Post, antiforgery: true,
                        new WebBookingHotelDto{searchHotelDto = Model.searchHotelDto, findHotelDto = item}))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            <a asp-action="DetailHotel" asp-route-id="@item.id">Detail Hotel</a>
                        </td>
                        <td>
                            <a asp-action="DetailHotelFind" asp-route-findHotelDto="@item">Detail Hotel Find</a>
                        </td>
                        
                        <td>
                            <a asp-action="DetailHotelSearch" asp-route-searchHotelDto="@Model.searchHotelDto">Detail Hotel Search</a>
                        </td>
                        <td>
                            <div class="form-group">
                                <input type="submit" value="Post Comment" class="btn btn-primary" />
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>