@model IEnumerable<lounga.Dto.Hotels.FindHotelDto>
@{
    ViewData["Title"] = "FindHotel";
}

<h1>@ViewData["Title"]</h1>

<div>
    <table class = "table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model){
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-action="DetailHotel" asp-route-id="@item.id">Detail Hotel</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>