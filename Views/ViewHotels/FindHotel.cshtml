@using lounga.Dto.Web
@model lounga.Dto.Web.WebFindHotelDto
@{
    ViewData["Title"] = "FindHotel";
    
}

<h1>@ViewData["Title"]</h1>

<div>
    <table class = "table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Address)
                </th>
                <th>
                    @Html.DisplayNameFor(modelItem => modelItem.findHotelDtos.FirstOrDefault().Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.findHotelDtos){
                <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.ActionLink("DetailHotel", "DetailHotel", new {bookingDate = Model.searchHotelDto.BookingDate,
                                totalRoom = Model.searchHotelDto.TotalRoom, hotelId = item.id})
                        </td>
                </tr>
            }
        </tbody>
    </table>
</div>